<%= render 'header', shelf: shelf, entries: nil %>

<div>
  <h2>
    <div id='header'>
      <b><%= link_to category, :shelf => shelf.name, :action => 'category_detail', :category => category %></b>
    　<font size='-1'>
      <%= link_to '書籍変更', :shelf => shelf.name, :action => 'category_bookselect', :category => category %> | 
      <%= link_to 'カテゴリ名変更／削除', :shelf => shelf.name, :action => 'category_rename', :category => category %>
      </font>
    </div>
  </h2>
  <div id="shelf_v">
    <div id="shelf">
      <div class="shelf_h"><%= image_tag "/images/fms.gif", :class => "fms" %></div>
      <% entries = Entry.where("shelf_id = ? and categories like ?", shelf.id, "%#{category}%").order("modtime DESC") %>
      <%= render 'textlist', entries: entries %>
    </div>
  </div>
  <div id='menu_bottom'>
    <%= render 'listmenu', entries: nil %>
  </div>
</div>

<%= render 'footer', entries: nil %>
